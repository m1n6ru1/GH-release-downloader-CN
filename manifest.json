{
  "manifest_version": 3,
  "name": "GHProxy Download",
  "version": "1.0",
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon96.png",
      "48": "images/icon192.png",
      "128": "images/icon512.png"
    }
  },
  "icons": {
    "16": "images/icon96.png",
    "48": "images/icon192.png",
    "128": "images/icon512.png"
  }
}